{
  "name": "gherkin-ast",
  "version": "2.0.0",
  "description": "JS model for Gherkin feature files",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "tsc:watch": "tsc -w",
    "build": "npm run clean && npm run compile && npm run copyToDist && npm test -- --coverage && npm run typedoc",
    "buildUpdate": "npm run compile && npm run copyToDist && npm run postbuild",
    "copyToDist": "copyfiles -f *.txt *.md package.json dist",
    "typedoc": "typedoc --exclude **/bin/**/*.ts --exclude **/cli.ts --out ./docs ./src",
    "clean": "rimraf ./dist",
    "test": "jest --coverage",
    "tslint": "tslint -c tslint.json ./src/**/*.ts ./tests/**/*.ts",
    "compile": "tsc && npm run tslint",
    "publish": "npm run build && npm public ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/szikszail/gherkin-ast.git"
  },
  "keywords": [
    "Gherkin",
    "Feature",
    "Scenario",
    "Scenario",
    "Outline",
    "Background",
    "Step",
    "Examples"
  ],
  "author": "Laszlo Szikszai <sziklaszlo@gmail.com>",
  "license": "MIT",
  "files": [
    "*.js",
    "*.d.ts",
    "*.js.map"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "bugs": {
    "url": "https://github.com/szikszail/gherkin-ast/issues"
  },
  "homepage": "https://github.com/szikszail/gherkin-ast#readme",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.3",
    "copyfiles": "^2.1.0",
    "jest": "^24.5.0",
    "jest-junit": "^6.3.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "tslint": "^5.15.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "cli-table3": "^0.5.1",
    "colors": "^1.3.3",
    "date-x": "^0.3.0",
    "gherkin": "^6.0.15",
    "object-set-type": "^1.0.1",
    "require-it": "^2.0.0",
    "split-lines": "^2.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ],
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "./src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
