{
  "name": "gherkin-ast",
  "version": "3.0.0",
  "description": "JS model for Gherkin feature files",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run copyToDist && npm test -- --coverage && npm run typedoc",
    "buildUpdate": "npm run compile && npm run copyToDist",
    "copyToDist": "copyfiles -f *.txt *.md package.json dist",
    "typedoc": "typedoc --mode file --exclude **/bin/**/*.ts --exclude **/cli.ts --out ./docs ./src && touch ./docs/.nojekyll",
    "clean": "rimraf ./dist ./docs",
    "test": "jest --coverage",
    "tslint": "tslint -c tslint.json ./src/**/*.ts ./tests/**/*.ts",
    "compile": "tsc && npm run tslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gherking/gherkin-ast.git"
  },
  "keywords": [
    "Gherkin",
    "Feature",
    "Scenario",
    "Scenario",
    "Outline",
    "Background",
    "Step",
    "Examples"
  ],
  "author": "GherKing (https://github.com/gherking)",
  "license": "MIT",
  "files": [
    "**/*.js",
    "**/*.d.ts",
    "**/*.js.map"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "bugs": {
    "url": "https://github.com/gherking/gherkin-ast/issues"
  },
  "homepage": "https://github.com/gherking/gherkin-ast#readme",
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.1",
    "copyfiles": "^2.3.0",
    "jest": "^26.4.2",
    "jest-junit": "^11.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.3.0",
    "tslint": "^6.1.3",
    "typedoc": "^0.19.1",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "object-set-type": "^1.0.1"
  },
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ],
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "./src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}