{
    "compilerOptions": {
      "lib": [
        "es2018"
      ],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "target": "es2018",
      "module": "commonjs",
      "noImplicitAny": true,
      "declaration": true,
      "importHelpers": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true
    },
    "include": [
      "src"
    ]
  }